{% import '/macro/form.html.twig' as form %}

<!-- Edit Profile-->
<div class="profile-modal modal fade" id="profile" tabindex="-1" aria-labelledby="profile" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            <div class="modal-body text-center pb-5 mb-5">
                <div class="container">
                    <div class="row d-flex align-items-center justify-content-center">
                        <div class="col-12 col-lg-7">
                            <div class="card text-primary mb-4">
                                <h5 class="fw-bolder text-light bg-primary py-3 rounded">Modifier mon profil</h5>
                                <div class="card-body">
                                    <form id="formEditProfile" method="post">
                                        <div id="alertEditProfile"></div>
                                        <input type="hidden" name="id" value="{{user.id}}">
                                        <div class="row my-2">
                                            <div class="col-lg-3"><span class="text-danger">* </span>Prénom : </div>
                                            {{ form.input('firstNameProfile','Prénom', {class:'col',other:'pattern="[a-zA-Z]+"
                                            maxlength=45 required title="Doit contenir uniquement des lettres"',
                                            type:'text', value:user.firstName})}}
                                        </div>
                                        <div class="row my-2">
                                            <div class="col-lg-3"><span class="text-danger">* </span>Nom : </div>
                                            {{ form.input('lastNameProfile','Nom', {class:'col',other:'pattern="[a-zA-Z]+"
                                            maxlength=45 required title="Doit contenir uniquement des lettres"',
                                            type:'text', value:user.lastName})}}
                                        </div>
                                        <div class="row my-2">
                                            <div class="col-lg-3"><span class="text-danger">* </span>E-mail : </div>
                                            {{form.input('email','Email', {class:'col',other:'maxlength=255
                                            required autocomplete=off', type:'email', value:user.email})}}
                                        </div>
                                        <div class="row my-2">
                                            <div class="col-lg-3">Téléphone : </div>
                                            {{ form.input('phone','Téléphone', {class:'col',other:'pattern="[0-9]+"
                                            maxlength=15 title="Doit contenir uniquement des chiffres"',
                                            type:'text', value:user.phone})}}
                                        </div>

                                        <div class="row my-2">
                                            <div class="col-lg-3">Lien CV : </div>
                                            {{ form.input('cvLink','http://', {class:'col',other:'pattern="https?://.+"
                                            maxlength=255 title="Doit inclure http://"',
                                            type:'text', value:user.cvLink})}}
                                        </div>
                                        <div class="row my-2">
                                            <div class="col-lg-3">Twitter : </div>
                                            {{ form.input('twitter','@', {class:'col',other:'pattern="@.+"
                                            maxlength=45 title="Doit inclure @"',
                                            type:'text', value:user.twitter})}}
                                        </div>
                                        <div class="row my-2">
                                            <div class="col-lg-3">GitHub : </div>
                                            {{ form.input('gitHub','', {class:'col',other:'
                                            maxlength=45 title=""',
                                            type:'text', value:user.gitHub})}}
                                        </div>
                                        <div class="row my-2">
                                            <div class="col-lg-3">LinkedIn : </div>
                                            {{ form.input('linkedIn','', {class:'col',other:'
                                            maxlength=45 title=""',
                                            type:'text', value:user.linkedIn})}}
                                        </div>

                                        <div class="row my-4 justify-content-center">
                                            <div class="col">
                                                <button id="buttonEditProfile" class="btn btn-primary w-100 " type="submit">
                                                    Enregistrer
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
