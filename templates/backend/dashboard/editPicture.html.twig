{% import '/macro/form.html.twig' as form %}

<!-- Edit Picture-->
<div class="picture-modal modal fade" id="picture" tabindex="-1" aria-labelledby="picture" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center pb-5 mb-5">
                <div class="container">
                    <div class="row d-flex align-items-center justify-content-center">
                        <div class="col-12 col-lg-7">
                            <div class="card text-primary mb-4">
                                <h5 class="fw-bolder text-light bg-primary py-3 rounded">Modifier ma photo</h5>
                                <div class="card-body">
                                    <form id="formEditPicture" method="post" enctype="multipart/form-data">
                                        <div id="alertEditPicture"></div>
                                        <input type="hidden" name="id" value="{{user.id}}">
                                        <div class="row my-2">
                                            {{ form.input('picture','Photo', {class:'col',other:'required accept="image/png, image/jpeg, image/jpg" size=5242880',
                                            type:'file'})}}
                                        </div>
                                        <div class="row my-4 justify-content-center">
                                            <div class="col"><button id="buttonEditPicture"
                                                    class="btn btn-primary w-100 " type="submit">Enregistrer</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>