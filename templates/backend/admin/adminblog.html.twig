{% import '/macro/form.html.twig' as form %}
{% extends "base.html.twig" %}
{% block navbar %}
{% set urlblog = "/" %}
{% set url = "/" %}
{{ parent() }}
{% endblock %}
{% block body %}

<header id="adminBlog" class="page-section bg-light border-bottom mb-4 hero_adminblog">
    <div class="container">
        <div class="text-center mt-5">
            <h1 class="fw-bolder text-light">Administration Blog</h1>
        </div>
    </div>
</header>


<div class="container-fluid my-5 text-primary d-flex align-item-center justify-content-center">
    <div class="row d-flex align-item-center justify-content-center mb-1">
        <div class="col d-flex align-item-center justify-content-center">
            <div class="card text-white bg-primary mb-3" style="width: 24rem;">
                <div class="card-header h5 d-flex align-items-center justify-content-between">
                    <i class="far fa-newspaper fa-2x"></i>
                    Articles
                    <span>&nbsp;</span>
                </div>
                <div class="card-body">
                    <p class="card-text mb-1">
                        <span class="badge badge-light h5 mx-4">{{AllPostsCounterActive}}</span>
                        Articles publiés
                    </p>
                    <p class="card-text mb-1">
                        <span class="badge badge-light h5 mx-4">{{AllPostsCounterDisable}}</span>
                        Articles en brouillon
                    </p>
                    <p class="card-text mb-1">
                        <span class="badge badge-light h5 mx-4">{{AllPostsCounterArchived}}</span>
                        Articles archivés
                    </p>
                    <p class="card-text mb-1">
                        <span class="badge badge-light h5 mx-4">{{AllCategoriesCounter}}</span>
                        Catégories
                    </p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/postManager">Administrer</a>
                    <div class="small"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col d-flex align-item-center justify-content-center">
            <div class="card bg-light mb-3" style="width: 24rem;">
                <div class="card-header h5 d-flex align-items-center justify-content-between">
                    <i class="far fa-comments fa-2x"></i>
                    Commentaires
                    <span>&nbsp;</span>
                </div>
                <div class="card-body">
                    <p class="card-text mb-1">
                        <span class="badge badge-primary h5 mx-4">{{AllCommentsCounterActive}}</span>
                        Commentaires approuvés
                    </p>
                    <p class="card-text mb-1">
                        <span class="badge badge-primary h5 mx-4">{{AllCommentsCounterPending}}</span>
                        Commentaires en attente validation
                    </p>
                    <p class="card-text mb-1">
                        <span class="badge badge-primary h5 mx-4">{{AllCommentsCounterDisable}}</span>
                        Commentaires désapprouvés
                    </p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-primary stretched-link" href="/commentManager">Administrer</a>
                    <div class="small"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col d-flex align-item-center justify-content-center">
            <div class="card bg-secondary text-primary mb-3" style="width: 24rem;">
                <div class="card-header h5 d-flex align-items-center justify-content-between">
                    <i class="fa fa-users fa-2x"></i>
                    Utilisateurs
                    <span>&nbsp;</span>
                </div>
                <div class="card-body">
                    <p class="card-text mb-1">
                        <span class="badge badge-light h5 mx-4">{{AllUsersCounterAdmin}}</span>
                        Administrateurs
                    </p>
                    <p class="card-text mb-1">
                        <span class="badge badge-light h5 mx-4">{{AllUsersCounterMember}}</span>
                        Membres
                    </p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/userManager">Administrer</a>
                    <div class="small"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}