{% import '/macro/form.html.twig' as form %}
{% extends "layout.html.twig" %}
{% block navbar %}
{% set urlblog = "/" %}
{% set url = "/" %}
{{ parent() }}
{% endblock %}
{% block content %}

<header id="adminBlog" class="page-section hero_categoryManager border-bottom mb-4">
  <div class="container">
    <div class="text-center mt-5">
      <h1 class="fw-bolder text-light">Modifier une catégorie</h1>
    </div>
  </div>
</header>
<div class="container my-4 text-primary">
  <div class="mb-4 text-left d-flex justify-content-between">
    <a href="/categoryManager" class="btn btn-outline-secondary text-primary" role="button" rel="noopener">
      <i class="fas fa-angle-double-left"></i> Administration des catégories
    </a>
  </div>
  <form id="formCategoryEdit" method="post">
    <div id="alertCategoryEdit"></div>
    <input type="hidden" name="idCategoryEdit" value="{{category.id}}" />
    {% include "/backend/admin/category/categoryForm.html.twig" %}
    <div class="row my-4 justify-content-center">
      <div class="col">
        <button id="buttonCategoryEdit" class="btn btn-secondary w-100 " type="submit">
          Enregistrer mes modifications
        </button>
      </div>
    </div>
  </form>
</div>

{% endblock %}