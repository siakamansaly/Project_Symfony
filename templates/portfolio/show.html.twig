{% import '/macro/section.html.twig' as section %}
{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
    {{section.sectionstartDefault("Portfolio")}}

    <table class="table container">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ portfolio.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ portfolio.title }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td><img src="{{ asset('/assets/covers/') }}{{ portfolio.cover }}" alt="{{ portfolio.title }}" width="150" height="150" /></td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ portfolio.content|raw }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>
                    {% if portfolio.createdAt %}
                        {{ portfolio.createdAt|date('d/m/Y') }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ portfolio.link }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row d-flex justify-content-evenly text-center">
        <div class="col">
    <a href="{{ path('app_portfolio_index') }}" class="btn btn-outline-primary">back to list</a>
</div>
<div class="col">
    <a href="{{ path('app_portfolio_edit', {'id': portfolio.id}) }}" class="btn btn-secondary">edit</a>
</div>
<div class="col">
    {{ include('portfolio/_delete_form.html.twig') }}
</div>
</div>
{{section.sectionend()}}
{% endblock %}
