{% macro ratings(label,stars) %}
<div class="d-flex justify-content-between align-items-center px-2">
    <p class="h6">{{label|raw}}</p>
    <div class="text-nowrap"> 
        {% for i in 1..stars %}
        <i class="fa fa-star rating-color text-secondary"></i> 
        {% endfor %} 
    </div>
</div>
{% endmacro %}