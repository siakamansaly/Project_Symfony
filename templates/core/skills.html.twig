{% import '/macro/section.html.twig' as section %}
{{section.sectionstart("Comp√©tences",{id:'competences',bgColor:'text-primary',color:'text-primary',dividerColor:'divider-secondary',
divider:'fas fa-laptop-code', heading:''})}}
<!-- Skills Section Content-->
<div class="row mt-5 d-flex justify-content-center SlidInBottomAnimation">
    {% for hardSkill in hardSkills %}
    <div class="col-12 col-lg-6 col-xl-4 mb-5 px-5">
        <div class="h6 text-center mb-4 bg-primary text-light p-2 rounded">
            <i class="{{hardSkill.emoji}}"></i>
            {{hardSkill.title}}
        </div>

        {% for skill in hardSkill.skills|sort((a, b) => a.title <=> b.title) %}
        <!-- Rating-->
        <div class="d-flex justify-content-between align-items-center px-2">
            <p class="h6">{{skill.title}}</p>
            <div class="text-nowrap">
                {% if skill.stars is not null %}
                {% for i in 1..skill.stars %}
                <i class="fa fa-star rating-color text-secondary"></i>
                {% endfor %}
                {% endif %}
            </div>
        </div>
        <!-- End Rating-->
        {% endfor %}
    </div>
    {% endfor %}

    {% for environment in environments %}
    <div class="col-12 col-lg-6 col-xl-4 mb-5 px-5">
        <div class="h6 text-center mb-4 bg-primary text-light p-2 rounded">
            <i class="{{environment.emoji}}"></i>
            {{environment.title}}
        </div>

        {% for skill in environment.skills|sort((a, b) => a.title <=> b.title) %}
        <!-- Rating-->
        <div class="d-flex justify-content-between align-items-center px-2">
            <p class="justify">{{skill.title|raw}}</p>
        </div>
        <!-- End Rating-->
        {% endfor %}
    </div>
    {% endfor %}

</div>



<div class="row center d-flex justify-content-center SlidInLeftAnimation">
    {% for otherSkill in otherSkills %}
    <div class="col-12 col-lg-8 mb-5 px-5 ">
        <div class="h6 text-center mb-4 border border-primary text-primary p-2 rounded">
            <i class="{{otherSkill.emoji}}"></i>
            {{otherSkill.title}}
        </div>

        {% for skill in otherSkill.skills|sort((a, b) => a.title <=> b.title) %}
        <!-- Rating-->
        <div class="d-flex justify-content-between align-items-center px-2">
            <p class="h6">{{skill.title}}</p>
            <div class="text-nowrap">
                {% if skill.stars is not null %}
                {% for i in 1..skill.stars %}
                <i class="fa fa-star rating-color text-secondary"></i>
                {% endfor %}
                {% endif %}
            </div>
        </div>
        <!-- End Rating-->
        {% endfor %}
    </div>
    {% endfor %}

</div>

<div class="row SlidInRightAnimation">
    {% for softSkill in softSkills %}
    <div class="col-12 col-lg-4 mb-5 px-5 text-center">
        <div class="h6 text-center mb-4 bg-secondary text-primary p-2 rounded">
            <i class="{{softSkill.emoji}}"></i>
            {{softSkill.title}}
        </div>
        <ul class="nav flex-column px-3">
            {% for skill in softSkill.skills|sort((a, b) => a.title <=> b.title) %}
            <li class="nav-item mb-2">{{skill.title|raw}} </li>
            {% endfor %}
        </ul>
    </div>
    {% endfor %}
    
</div>
{{section.sectionend()}}