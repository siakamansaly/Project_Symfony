{% import '/macro/section.html.twig' as section %}
{{section.sectionstart("Portfolio",{id:'portfolio',bgColor:'bg-primary
portfolio',color:'text-white',dividerColor:'divider-light', divider:'fa fa-briefcase', heading:''})}}
<!-- Portfolio Grid Items-->
<div class="row justify-content-center mt-5 SlidInBottomAnimation">

    {% for portfolio in portfolios %}
    <!-- Portfolio {{portfolio.title}}-->
    <div class="col-md-6 col-lg-4 mb-5 ">
        <div class="portfolio-item mx-auto" data-bs-toggle="modal"
            data-bs-target="#{{'portfolioModal' ~ portfolio.id}}">
            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                <div class="portfolio-item-caption-content text-center text-white"><i
                        class="fas fa-search-plus fa-3x"></i>
                </div>
            </div>
            <img class="img-fluid" src="{{ asset('/assets/covers/') }}{{portfolio.cover}}" alt="{{portfolio.title}}" />
        </div>
    </div>

    
    {% endfor %}

</div>

{% for portfolio in portfolios %}
<!-- Portfolio Modal {{portfolio.title}}-->
<div class="portfolio-modal modal fade" id="{{'portfolioModal' ~ portfolio.id}}" tabindex="-1" aria-labelledby="{{'portfolioModal' ~ portfolio.id}}"
aria-hidden="true">
<div class="modal-dialog modal-xl">
    <div class="modal-content">
        <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal"
                aria-label="Close"></button></div>
        <div class="modal-body text-center pb-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <!-- Portfolio Modal - Title-->
                        <h3 class="h2 portfolio-modal-title text-secondary text-uppercase mb-0">{{portfolio.title}}</h3>
                        <!-- Icon Divider-->
                        <div class="divider-custom">
                            <div class="divider-custom-line"></div>
                            <div class="divider-custom-icon"><i class="fas fa-briefcase"></i></div>
                            <div class="divider-custom-line"></div>
                        </div>
                        <!-- Portfolio Modal - Image-->
                        <img class="img-fluid rounded mb-5" src="{{ asset('/assets/covers/') }}{{portfolio.cover}}" alt="{{portfolio.title}}" />
                        <!-- Portfolio Modal - Text-->
                        <p class="mb-4">{{portfolio.content|raw}}</p>
                        <div class="row">
                            <div class="col">
                                <a href="{{portfolio.link}}" target="_blank" rel="noopener" role="button"
                                    class="btn btn-primary btn-block">Visualiser</a>
                            </div>
                            <div class="col">
                                <button class="btn btn-outline-primary" data-bs-dismiss="modal"><i
                                        class="fas fa-times fa-fw"></i>Fermer</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% endfor %}

{{section.sectionend()}}