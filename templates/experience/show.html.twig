{% import '/macro/section.html.twig' as section %}
{% extends 'base.html.twig' %}

{% block title %}Experience{% endblock %}

{% block body %}
{{section.sectionstartDefault("Experience")}}

<table class="table container">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ experience.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ experience.title }}</td>
        </tr>
        <tr>
            <th>Society</th>
            <td>{{ experience.society }}</td>
        </tr>
        <tr>
            <th>DateStart</th>
            <td>{{ experience.dateStart ? experience.dateStart|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>DateEnd</th>
            <td>{{ experience.dateEnd ? experience.dateEnd|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ experience.city }}</td>
        </tr>
        <tr>
            <th>Formation</th>
            <td>{{ experience.formation }}</td>
        </tr>

        <tr>
            <th>Context</th>
            <td>{{ experience.context }}</td>
        </tr>

        <tr>
            <th>Details</th>
            <td>
                {% for detail in experience.experienceDetails %}
                    <li>{{ detail.content }}</li>
                {% endfor %}
                
            </td>
        </tr>
        
    </tbody>
</table>

<div class="row d-flex justify-content-evenly text-center">
    <div class="col">
        <a href="{{ path('app_experience_index') }}" class="btn btn-outline-primary">Back to list</a>
    </div>
    <div class="col">
        <a href="{{ path('app_experience_edit', {'id': experience.id}) }}" class="btn btn-secondary">Edit</a>
    </div>
    <div class="col">
        {{ include('experience/_delete_form.html.twig') }}
    </div>
</div>
{{section.sectionend()}}
{% endblock %}