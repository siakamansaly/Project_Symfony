{% form_theme form 'bootstrap_5_layout.html.twig' %}
<div class="container">
    <div class="row d-flex justify-content-evenly mb-2" >
        <div class="col-md-12 col-lg-6">
            {{ form_start(form) }}

            <div class="form-group">
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.title) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.stars) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.category) }}
                    </div>
                </div>
            <button class="btn {{ button_class|default('btn-primary') }}">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
